@{
  Layout=null;
}
@model ViewModel.Vm_User
<!DOCTYPE html>
<html lang="en">
  
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, viewport-fit=cover, shrink-to-fit=no">
    <meta name="description" content="تاکسی جو - اولین سامانه آنلاین تاکسی طراحی توسط تیم همپادکو">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="theme-color" content="#100DD1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <!-- The above tags *must* come first in the head, any other head content must come *after* these tags-->
    <!-- Title-->
     <title>تاکسی جو</title>
    <!-- Favicon-->
    <link rel="icon" href="~/app/img/icons/icon-72x72.png">
    <!-- Apple Touch Icon-->
    <link rel="apple-touch-icon" href="~/app/img/icons/icon-96x96.png">
    <link rel="apple-touch-icon" sizes="152x152" href="~/app/img/icons/icon-152x152.png">
    <link rel="apple-touch-icon" sizes="167x167" href="~/app/img/icons/icon-167x167.png">
    <link rel="apple-touch-icon" sizes="180x180" href="~/app/img/icons/icon-180x180.png">
    <!-- Stylesheet-->
    <link rel="stylesheet" href="~/app/style.css">
    <!-- Web App Manifest-->
    <link rel="manifest" href="~/app/manifest.json">
  </head>
  <body>
    <!-- Preloader-->
    <div class="preloader" id="preloader">
      <div class="spinner-grow text-secondary" role="status">
        <div class="sr-only">بارگذاری...</div>
      </div>
    </div>
    <!-- Login Wrapper Area-->
    <form action="/Home/otpconfig" method="POST">
    <div class="login-wrapper d-flex align-items-center justify-content-center text-center">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12 col-sm-9 col-md-7 col-lg-6 col-xl-5">
            <div class="text-left px-4">
             
              <h5 class="mb-1 text-white">شماره تلفن را تأیید کنید</h5>
              <p class="mb-4 text-white">کد تایید ارسال شده به <strong class="ml-1">@ViewBag.Mobile را وارد کنید</strong></p>
               @if ( ViewBag.msg != null)
              {
                <p class="alert alert-danger"> @ViewBag.msg</p>
              }
            </div>
            <!-- OTP Verify Form-->
            <div class=" mt-5 px-4">
              <form action="home.html" method="">
                <div class="d-flex justify-content-between mb-5">
                  <input style="font-size: 18px;" class="form-control text-center" required type="number" asp-for="token" placeholder="ـــــ  ـــــ  ـــــ  ـــــ"  maxlength="4">
                  
                </div>
                <button class="btn btn-warning btn-lg w-100" type="submit">تأیید و ادامه دهید</button>
              </form>
            </div>
            <!-- Term & Privacy Info-->
            <div class="login-meta-data px-4">
              <p class="mt-3 mb-0">کد تایید را دریافت نکردید؟<span class="otp-sec ml-1 text-white" id="resendOTP"></span></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    </form>
    <!-- All JavaScript Files-->
    <script src="~/app/js/jquery.min.js"></script>
    <script src="~/app/js/bootstrap.bundle.min.js"></script>
    <script src="~/app/js/waypoints.min.js"></script>
    <script src="~/app/js/jquery.easing.min.js"></script>
    <script src="~/app/js/owl.carousel.min.js"></script>
    <script src="~/app/js/jquery.counterup.min.js"></script>
    <script src="~/app/js/jquery.countdown.min.js"></script>
    <script src="~/app/js/default/jquery.passwordstrength.js"></script>
    <script src="~/app/js/wow.min.js"></script>
    <script src="~/app/js/jarallax.min.js"></script>
    <script src="~/app/js/jarallax-video.min.js"></script>
    <script src="~/app/js/default/dark-mode-switch.js"></script>
    <script src="~/app/js/default/otp-timer.js"></script>
    <script src="~/app/js/default/active.js"></script>
    <script src="~/app/js/pwa.js"></script>
  
</body>
</html>