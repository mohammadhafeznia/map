@model ViewModel.Vm_driver
@{
    Layout=null;
}


<!DOCTYPE html>

<html lang="en">
  
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, viewport-fit=cover, shrink-to-fit=no">
    <meta name="description" content="تاکسی جو">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="theme-color" content="#100DD1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <!-- The above tags *must* come first in the head, any other head content must come *after* these tags-->
    <!-- Title-->
     <title>تاکسی جو</title>
    <!-- Favicon-->
    <link rel="icon" href="/app/img/core-img/1.png>
    <!-- Apple Touch Icon-->
    <link rel="apple-touch-icon" href="~/app/img/icons/icon-96x96.png">
    <link rel="apple-touch-icon" sizes="152x152" href="~/app/img/icons/icon-152x152.png">
    <link rel="apple-touch-icon" sizes="167x167" href="~/app/img/icons/icon-167x167.png">
    <link rel="apple-touch-icon" sizes="180x180" href="~/app/img/icons/icon-180x180.png">
    <!-- Stylesheet-->
    <link rel="stylesheet" href="~/app/style.css">
    <!-- Web App Manifest-->
    <link rel="manifest" href="~/app/manifest.json">
  </head>
  <body>
    <!-- Preloader-->
    <div class="preloader" id="preloader">
      <div class="spinner-grow text-secondary" role="status">
        <div class="sr-only">بارگذاری...</div>
      </div>
    </div>
    <!-- Login Wrapper Area-->
    <div class="login-wrapper d-flex align-items-center justify-content-center text-center">
      <!-- Background Shape-->
      <div class="background-shape"></div>
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12 col-sm-9 col-md-7 col-lg-6 col-xl-5"><img class="big-logo" src="~/app/img/core-img/logo-white.png" alt="">
            <!-- Register Form-->

           @if (ViewBag.msg != null)
{
    <p class="alert alert-danger text-center">@ViewBag.msg</p>
}
           
            <div class="register-form mt-5 px-4">
                    <form action="/driver/Login/CheckLogin" method="POST">
                <div class="form-group text-left mb-4"><span>نام کاربری</span>
                  <label for="username"><i class="lni lni-user"></i></label>
                  <input class="form-control" asp-for="Username"  type="text" placeholder="نام کاربری" required >
                </div>
                <div class="form-group text-left mb-4"><span>کلمه عبور</span>
                  <label for="password"><i class="lni lni-lock"></i></label>
                  <input class="form-control" asp-for="Password" type="password" placeholder="**********" required>
                </div>
                <button class="btn btn-success btn-lg w-100" type="submit"> ورود</button>
              </form>
            </div>


            <!-- Login Meta-->
            @* <div class="login-meta-data"><a class="forgot-password d-block mt-3 mb-1" href="forget-password.html">رمز عبور را فراموش کرده اید؟</a>
              <p class="mb-0">حساب کاربری ندارید؟ <a class="ml-1" href="register.html">اکنون ثبت نام کنید</a></p>
            </div> *@
            <!-- View As Guest-->
            @* <div class="view-as-guest mt-3"><a class="btn" href="home.html">مشاهده به عنوان مهمان</a></div> *@


          </div>
        </div>
      </div>
    </div>
    <!-- All JavaScript Files-->
    <script src="~/app/js/jquery.min.js"></script>
    <script src="~/app/js/bootstrap.bundle.min.js"></script>
    <script src="~/app/js/waypoints.min.js"></script>
    <script src="~/app/js/jquery.easing.min.js"></script>
    <script src="~/app/js/owl.carousel.min.js"></script>
    <script src="~/app/js/jquery.counterup.min.js"></script>
    <script src="~/app/js/jquery.countdown.min.js"></script>
    <script src="~/app/js/default/jquery.passwordstrength.js"></script>
    <script src="~/app/js/wow.min.js"></script>
    <script src="~/app/js/jarallax.min.js"></script>
    <script src="~/app/js/jarallax-video.min.js"></script>
    <script src="~/app/js/default/dark-mode-switch.js"></script>
    <script src="~/app/js/default/active.js"></script>
    <script src="~/app/js/pwa.js"></script>
  
</body>
</html>